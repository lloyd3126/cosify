# Database
DATABASE_PATH=.data/app.sqlite

# Google GenAI (Developer API)
GOOGLE_API_KEY=
# 或者使用 GEMINI_API_KEY（相容）
GEMINI_API_KEY=
GENAI_IMAGE_MODEL=gemini-2.5-flash-image-preview # 僅使用此模型進行兩次生成

# Prompts (optional: leave empty to use defaults)
COSIFY_PROMPT_TO_COSPLAYER=
COSIFY_PROMPT_TO_COSPLAYER_OUTFIT=
COSIFY_PROMPT_TO_USER_COSPLAY=

# Temperatures (optional, 0~2; empty = model default)
COSIFY_TEMP_TO_COSPLAYER=
COSIFY_TEMP_TO_COSPLAYER_OUTFIT=
COSIFY_TEMP_TO_USER_COSPLAY=

# Cloudflare R2
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=

# Better-Auth
BETTER_AUTH_SECRET=change_me_to_a_long_random_string
